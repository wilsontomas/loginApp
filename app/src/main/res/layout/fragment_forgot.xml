<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".forgotFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/forgotimg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/forgot" />

            <TextView
                android:id="@+id/textMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgotTitle"
                android:layout_margin="30dp"
                android:textSize="30sp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/forgotUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/forgotName"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                />



            <Button
                android:id="@+id/forgotBtnAction2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgotPasswordAction"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                />


            <Button
                android:id="@+id/forgotRegisterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registerBtn"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                />

            <Button
                android:id="@+id/forgotLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loginForgot"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                />

        </LinearLayout>

    </ScrollView>
</FrameLayout>